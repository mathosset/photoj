<!doctype html>
<html lang="fr">
  <head>
    <title><%= page_title %></title>
    <!-- Meta Data -->
    <meta name='description' content='<%= page_description %>'>
    <meta name='author' content='Mathieu Thomasset'>

    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name='robots' content='index,follow'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">


    <!-- Viewport, set to device width -->

<!--     <meta http-equiv="content-language" content="fr">
 -->


    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="<%= data.site.twitter_handle %>">
    <meta name="twitter:title" content="<%= page_title %>">
    <meta name="twitter:description" content="<%= page_description %>">
    <meta name="twitter:creator" content="<%= data.site.twitter_handle %>">
    <meta name="twitter:image" content="<%= page_image %>">

    <!-- Opengraph Data -->
    <meta property="og:title" content="<%= page_title %>"/>
    <meta property="og:type" content="website"/>
    <meta property="og:url" content="<%= current_page_url %>"/>
    <meta property="og:image" content="<%= page_image %>"/>
    <meta property="og:image:width" content="1024"/>
    <meta property="og:image:height" content="768"/>
    <meta property="og:description" content="<%= page_description %>"/>
    <meta property="og:site_name" content="<%= data.site.title %>"/>

    <% if current_page.data.preferred_url %>
        <link rel="canonical" href='<%= current_page.data.preferred_url %>'>
    <% end %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Abel&family=Roboto:wght@900&display=swap" rel="stylesheet">
<!--     <link href='http://fonts.googleapis.com/css?family=Abel|Open+Sans:400,300,700' rel='stylesheet' type='text/css'>
 -->   <!--  <link href="https://fonts.googleapis.com/css?family=Abel" rel="stylesheet" type='text/css'> -->

    <%= favicon_tag 'favicon.ico' %>
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>

    <!-- Global site tag (gtag.js) - Google Ads: 1022405015 --> 
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-1022405015"></script> <script> window.dataLayer = window.dataLayer || []; function gtag(){dataLayer.push(arguments);} gtag('js', new Date()); gtag('config', 'AW-1022405015'); </script>

    <% if current_page.data.preferred_url=='http://www.mathieuthomasset.fr/confirmation-de-contact' %>
        <!-- Event snippet for Prospect conversion page --> 
        <script> gtag('event', 'conversion', {'send_to': 'AW-1022405015/BnkYCJPx_8EBEJfTwucD'}); </script>
    <% end %>
  </head>

  <body class="<%= page_classes %>">

    <%= partial 'layouts/navbar' %>

    <%= yield %>

    <%= partial 'layouts/footer' %>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-64698854-1', 'auto');
      ga('send', 'pageview');
    </script>

  </body>
</html>
