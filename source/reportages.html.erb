---
title: Reportages
preferred_url: http://www.mathieuthomasset.fr/reportages.html
---

<header id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
	  	<% data.home.each_with_index do |y, index| %>
	  		<% if index==0 %>
	    		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
	    	<% else %>	
	    		<li data-target="#myCarousel" data-slide-to="<%= index %>"></li>
	    	<% end %>
	    <% end %>
	  </ol>

    <!-- Wrapper for Slides -->
    <div class="carousel-inner">
	  	<% data.home.each_with_index do |y, index| %>
	  		<% if index==0 %>
		    	<div class="item active">
		    <% else %>
		  		<div class="item">
	      	<% end %>
 	      			<div class="fill" style="background-image:url('../images/<%= y.picture %>');"></div>
		         	<div class="carousel-caption">
		         		<h3><%= y.title.upcase %></h3>
		         		<div class="spacer"></div>
		         		<a href="<%= y.page %>" class="btn-medium">Reportage</a>
	          		</div>
	        	</div>
	    <% end %>
	  	</div>
	</div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next" aria-hidden="true"></span>
    </a>
</header>




